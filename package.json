{
  "name": "switcher-api",
  "version": "1.2.7",
  "description": "Feature Flag/Toggle API",
  "main": "start.js",
  "author": {
    "name": "Roger Floriano",
    "email": "switcher.project@gmail.com"
  },
  "scripts": {
    "build": "npm run clean && npm run build-babel",
    "start": "npm run build && node ./build/index.js",
    "build-babel": "babel -d ./build ./src -s",
    "clean": "rm -rf build && mkdir build",
    "dev": "env-cmd -e dev nodemon ./src/start.js",
    "prod": "env-cmd -e prod nodemon ./src/start.js",
    "lint": "eslint src",
    "test": "jest --runInBand --collect-coverage",
    "test-local": "env-cmd -e test jest --runInBand --collect-coverage"
  },
  "keywords": [
    "feature",
    "flag",
    "toggle",
    "switcher-api"
  ],
  "license": "MIT",
  "dependencies": {
    "axios": "^1.2.3",
    "bcryptjs": "^2.4.3",
    "cors": "^2.8.5",
    "express": "^4.18.2",
    "express-basic-auth": "^1.2.1",
    "express-graphql": "^0.12.0",
    "express-validator": "^6.14.2",
    "graphql": "^15.8.0",
    "graphql-tag": "^2.12.6",
    "helmet": "^6.0.1",
    "jsonwebtoken": "^9.0.0",
    "moment": "^2.29.4",
    "mongodb": "^4.13.0",
    "mongoose": "^6.8.4",
    "pino": "^8.8.0",
    "pino-pretty": "^9.1.1",
    "swagger-ui-express": "^4.6.0",
    "switcher-client": "^3.1.3",
    "validator": "^13.7.0"
  },
  "devDependencies": {
    "@babel/cli": "^7.20.7",
    "@babel/core": "^7.20.12",
    "@babel/node": "^7.20.7",
    "@babel/preset-env": "^7.20.2",
    "@babel/register": "^7.18.9",
    "babel-jest": "^29.3.1",
    "babel-polyfill": "^6.26.0",
    "env-cmd": "^10.1.0",
    "eslint": "^8.31.0",
    "jest": "^29.3.1",
    "jest-sonar-reporter": "^2.0.0",
    "node-notifier": "^10.0.1",
    "nodemon": "^2.0.20",
    "sinon": "^15.0.1",
    "supertest": "^6.3.3"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/switcherapi/switcher-api"
  }
}
