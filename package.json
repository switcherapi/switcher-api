{
  "name": "switcher-api",
  "version": "1.2.8",
  "description": "Feature Flag/Toggle API",
  "main": "src/start.js",
  "type": "module",
  "author": {
    "name": "Roger Floriano",
    "email": "switcher.project@gmail.com"
  },
  "scripts": {
    "start": "node ./src/start.js",
    "dev": "env-cmd -e dev nodemon ./src/start.js",
    "prod": "env-cmd -e prod nodemon ./src/start.js",
    "lint": "eslint ./src/**/*.js",
    "test": "jest --runInBand --collect-coverage",
    "test-local": "env-cmd -e test jest --runInBand --collect-coverage",
    "snyk": "snyk test --strict-out-of-sync=false"
  },
  "jest": {
    "transform": {},
    "clearMocks": true,
    "testEnvironment": "node",
    "testResultsProcessor": "jest-sonar-reporter",
    "coveragePathIgnorePatterns": [
      "<rootDir>/node_modules/",
      "<rootDir>/src/api-docs/",
      "<rootDir>/src/app-server.js"
    ]
  },
  "keywords": [
    "feature",
    "flag",
    "toggle",
    "switcher-api"
  ],
  "license": "MIT",
  "dependencies": {
    "axios": "^1.7.7",
    "bcryptjs": "^2.4.3",
    "cors": "^2.8.5",
    "express": "^5.0.1",
    "express-basic-auth": "^1.2.1",
    "express-rate-limit": "^7.4.1",
    "express-validator": "^7.2.0",
    "graphql": "^16.9.0",
    "graphql-http": "^1.22.1",
    "graphql-tag": "^2.12.6",
    "helmet": "^8.0.0",
    "jsonwebtoken": "^9.0.2",
    "moment": "^2.30.1",
    "mongodb": "^6.10.0",
    "mongoose": "^8.7.3",
    "pino": "^9.5.0",
    "pino-pretty": "^11.3.0",
    "swagger-ui-express": "^5.0.1",
    "switcher-client": "^4.1.1",
    "validator": "^13.12.0"
  },
  "devDependencies": {
    "env-cmd": "^10.1.0",
    "eslint": "^9.13.0",
    "jest": "^29.7.0",
    "jest-sonar-reporter": "^2.0.0",
    "node-notifier": "^10.0.1",
    "nodemon": "^3.1.7",
    "sinon": "^18.0.1",
    "supertest": "^7.0.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/switcherapi/switcher-api"
  }
}
